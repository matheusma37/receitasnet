<%= form_for(@recipe) do |r| %>

	<p class="form-group">
		<%= r.label :Nome %><br>
		<%= r.text_field :name, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Ingredientes %><br>
		<%= r.text_area :stuff, cols: 20, rows: 5, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Tipo %><br>
		<%= r.text_field :kind, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Calorias %><br>
		<%= r.number_field :calories, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Modo_de_preparo %><br>
		<%= r.text_area :prepare_mode, cols: 20, rows: 5, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Tempo_de_preparo %><br>
		<%= r.time_select :duration, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Porções %><br>
		<%= r.text_field :portion, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Custo %><br>
		<%= r.number_field :cost, step: :any, class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.label :Poster %><br>
		<%= r.text_field :poster, placeholder: ".Gif, .JPG ou .PNG", class:"form-control" %>
	</p>

	<p class="form-group">
		<%= r.submit 'Salvar', class:"btn btn-primary" %>
		<%= link_to 'Cancelar', root_path, class:"btn btn-default" %>
	</p>

<% end %>